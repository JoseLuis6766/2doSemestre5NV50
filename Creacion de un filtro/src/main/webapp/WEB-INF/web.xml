<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <filter>
        <filter-name>Log</filter-name>
        <filter-class>FILTROS.Log</filter-class>
    </filter>
    <filter>
        <filter-name>MideTiempo1</filter-name>
        <filter-class>FILTROS.MideTiempo1</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>MideTiempo1</filter-name>
        <servlet-name>CalculaEdad</servlet-name>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>Log</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>MideTiempo</servlet-name>
        <servlet-class>Servlet.MideTiempo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CalculaEdad</servlet-name>
        <servlet-class>Servlet.CalculaEdad</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MideTiempo</servlet-name>
        <url-pattern>/MideTiempo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CalculaEdad</servlet-name>
        <url-pattern>/CalculaEdad</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
